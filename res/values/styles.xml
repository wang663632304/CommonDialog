<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    <style name="common_dialog_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="common_dialog_message_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="common_dialog_positive_btn_style" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_common_btn</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="common_dialog_negative_btn_style" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_common_btn</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:gravity">center</item>
    </style>

</resources>